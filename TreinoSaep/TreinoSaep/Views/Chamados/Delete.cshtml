@model TreinoSaep.Models.Chamado

@{
    ViewData["Title"] = "Deletar Chamado";
}

<div class="container mt-5">
    <h1 class="text-center">Confirmar Deleção</h1>
    <hr />
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Você tem certeza que deseja deletar este chamado?</h5>
            <p><strong>Descrição:</strong> @Model.Descricao</p>
            <p><strong>Setor:</strong> @Model.Setor</p>
            <p><strong>Prioridade:</strong> @Model.Prioridade</p>
            <p class="card-text"><strong>Autor: </strong> @Model.Usuario.Nome</p>
            <form asp-action="Delete" method="post">
                <input asp-for="@Model.Idchamado" type="hidden" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" asp-controller="Gerenciamento" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </div>
            </form>
        </div>
    </div>
</div>
